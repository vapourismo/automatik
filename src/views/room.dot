<html>
	<head>
		<title><%= data.info.title %></title>
		<link rel="stylesheet" type="text/css" href="/static/style.css" />
	</head>

	<body>
		<div id="menu">
			<a class="item" href="/rooms">Übersicht</a>
			<a class="item right" href="/rooms/<%= data.room.id %>/settings">Einstellungen</a>
		</div>

		<div id="scroll-area">
			<div id="container">
				<div class="tile">
					<a class="box component">
						<div class="label">Zieltemperatur</div>
						<div class="value">20 °C</div>
					</a>
				</div>
				<div class="tile">
					<a class="box component">
						<div class="label">Temperatur</div>
						<div class="value">22.5 °C</div>
					</a>
				</div>
				<div class="tile">
					<a class="box component">
						<div class="label">Licht</div>
						<div class="value">an</div>
					</a>
				</div>
			</div>
		</div>
	</body>
</html>
