<html>
	<head>
		<title><%= data.info.title %></title>
		<link rel="stylesheet" type="text/css" href="/static/style.css" />
	</head>

	<body>
		<div id="menu">
			<a class="item" href="/rooms">Übersicht</a>
			<a class="item right" href="/rooms/<%= data.roomID %>/settings">Einstellungen</a>
		</div>

		<div id="scroll-area">
			<div id="container">
				<%~ data.components: component %>
					<div class="tile">
						<a class="box component">
							<div class="label"><%= component.name %></div>
							<!-- <div class="value">20 °C</div> -->
						</a>
					</div>
				<%~%>
			</div>
		</div>
	</body>
</html>
