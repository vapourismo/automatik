<html>
	<head>
		<title><%= data.info.title %></title>
		<link rel="stylesheet" type="text/css" href="/static/style.css" />
		<script src="/socket.io/socket.io.js"></script>
		<script src="/static/jquery.min.js"></script>
		<script src="/static/room.js"></script>
	</head>

	<body>
		<div id="menu">
			<a class="item" href="/rooms">Overview</a>
			<a class="item right" href="/rooms/<%= data.room %>/settings">Settings</a>
		</div>

		<div id="scroll-area">
			<div id="container">
				<%~ data.entities: entity %>
					<div class="tile">
						<%= entity %>
					</div>
				<%~%>
			</div>
		</div>

		<div id="overlay">
			<div class="popup">
				<div class="header">
					<div class="item">Title</div>
					<a class="item close">X</a>
				</div>
				<div class="contents"></div>
			</div>
		</div>
	</body>
</html>
